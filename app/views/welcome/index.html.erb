    <div class='text-white mr-20 content-center'>
      <p class="text-6xl max-w-3xl"><%= t(".enjoy_tv") %></p>
      <p class="text-lg"><%= t(".watch_tv") %></p>
    </div>
    <div class="-pt-[150px]">
      <%= image_tag "tv.png" %>
    </div>
  </div>
</div>
